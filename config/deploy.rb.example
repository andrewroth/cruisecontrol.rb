# ================================================================
# CUSTOM RECIPES
# ================================================================

  namespace :deploy do
    desc "Update symlink for projects directory"
    task:after_update_code do
      sudo "chmod -R 775 #{release_path}/tmp"
      sudo "chmod -R 775 #{release_path}/log"
      sudo "chmod ugo+x #{release_path}/cruise"     
      sudo "rm -rf #{release_path}/public/images/charts"
      sudo "mkdir -p #{shared_path}/charts"
      sudo "ln -nfs #{shared_path}/charts #{release_path}/public/images/charts"
      sudo "rm -rf #{release_path}/projects"
      sudo "mkdir -p #{shared_path}/projects"
      sudo "chmod -R 775 #{shared_path}/projects"
      #sudo "chown deployer #{shared_path}/projects"
      #sudo "chgrp rails #{shared_path}/projects"
      sudo "ln -nfs #{shared_path}/projects #{release_path}/projects"
      sudo "touch #{shared_path}/mongrel_cluster.yml"
      sudo "cp -f #{shared_path}/mongrel_cluster.yml #{release_path}/config/mongrel_cluster.yml"
      sudo "touch #{shared_path}/mailer.yml"
      sudo "cp -f #{shared_path}/mailer.yml #{release_path}/config/mailer.yml"
      sudo "touch #{shared_path}/site_config.rb"
      sudo "cp -f #{shared_path}/site_config.rb #{release_path}/config/site_config.rb"
   end
end

#after 'deploy:update_code', 'deploy:after_update_code'

  namespace :app do
  desc "A task which restarts the mongrel cluster." 
  task :restart_mongrel_cluster, :roles => :app do    
    sudo "monit -g mongrel restart all"  
  end
end

after 'app:copy_config_files', 'app:restart_mongrel_cluster'

  namespace :deploy do
    desc "stop CC.rb"
    task :stop_ccrb do
      sudo "monit -g mongrel stop all" rescue nil
      sudo "rcmonit stop" rescue nil
  end
end
before 'deploy:update_code', 'deploy:stop_ccrb'

  namespace :deploy do
    desc "start CC.rb"
    task :start_ccrb do
      sudo "rcmonit start" rescue nil
    end
end

after 'deploy:symlink', 'deploy:start_ccrb'

  namespace :deploy do
  desc "Run GemInstaller to install needed gems."
  task :update_gem do   
    run "gem sources -u && geminstaller -e -c  #{release_path}/config/geminstaller.yml"
  end
end

after 'deploy:update_code', 'deploy:update_gem'


require File.dirname(__FILE__) + "/recipes/cruisecontrol.rb"